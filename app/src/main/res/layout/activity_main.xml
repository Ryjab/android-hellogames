<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/gris" android:id="@+id/Main">

    <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="286dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintVertical_bias="0.496"
            android:id="@+id/ImageGrid">

        <ImageView
                android:layout_width="138dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[0]"
                android:layout_alignParentStart="true" android:layout_marginStart="6dp"
                android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                android:id="@+id/ImageHautGauche"
                android:layout_marginTop="4dp" android:layout_marginLeft="6dp" android:contentDescription="jeux1"
                android:layout_above="@+id/horizontalDivider" android:layout_marginBottom="7dp"
                android:layout_toStartOf="@+id/VerticalDivider" android:layout_marginRight="3dp"
                android:layout_marginEnd="3dp" android:layout_toLeftOf="@+id/VerticalDivider"/>
        <ImageView
                android:layout_width="138dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[0]"
                android:layout_alignParentTop="true"
                android:id="@+id/ImageHautDroite"
                android:layout_marginTop="4dp" android:contentDescription="jeux1"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" android:layout_marginEnd="5dp"
                android:layout_above="@+id/horizontalDivider" android:layout_marginBottom="7dp"
                android:layout_toEndOf="@+id/VerticalDivider" android:layout_toRightOf="@+id/VerticalDivider"
                android:layout_marginLeft="3dp" android:layout_marginStart="3dp"/>
        <ImageView
                android:layout_width="138dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[0]"
                android:layout_alignParentStart="true" android:layout_marginStart="5dp"
                android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
                android:id="@+id/ImageBasGauche" android:layout_marginBottom="5dp" android:layout_marginLeft="5dp"
                android:contentDescription="jeux3"
                android:layout_marginTop="6dp" android:layout_below="@+id/horizontalDivider"
                android:layout_toStartOf="@+id/VerticalDivider" android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp" android:layout_toLeftOf="@+id/VerticalDivider"/>
        <ImageView
                android:layout_width="139dp"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[0]"
                android:layout_alignParentBottom="true"
                android:id="@+id/ImageBasDroite" android:layout_marginBottom="4dp"
                android:contentDescription="jeux3" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" android:layout_marginRight="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="7dp" android:layout_below="@+id/horizontalDivider"
                android:layout_toEndOf="@+id/VerticalDivider" android:layout_toRightOf="@+id/VerticalDivider"
                android:layout_marginLeft="4dp" android:layout_marginStart="4dp"/>
        <View
                android:id="@+id/horizontalDivider"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                android:background="@color/bleu"
                android:layout_marginRight="0dp" android:layout_marginEnd="0dp" android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" android:visibility="visible"/>
        <View
                android:id="@+id/VerticalDivider"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="@color/bleu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:visibility="visible"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>